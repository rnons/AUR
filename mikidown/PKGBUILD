# Maintainer: rnons <remotenonsense at gmail dot com>

pkgname=mikidown
_githubuser=rnons
pkgver=0.1.5
pkgrel=1
pkgdesc="A note taking application featuring markdown syntax"
arch=('any')
url="http://rnons.github.com/mikidown"
license=('GPL3')
depends=('python'
    	 'pyqt'
         'python-markdown'
         'python-whoosh')
source=(https://github.com/$_githubuser/$pkgname/tarball/v$pkgver)
md5sums=('25a74f5f3e6f2e18a9df2975cb558828')

build(){
    cd "$srcdir"
    tar -xf v$pkgver
    cd "$_githubuser-$pkgname-"*
    python setup.py install --root="$pkgdir" 
}
